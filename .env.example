# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Wix App Configuration
WIX_APP_ID=your-wix-app-id
WIX_APP_SECRET=your-wix-app-secret
WIX_CLIENT_ID=your-wix-client-id
WIX_CLIENT_SECRET=your-wix-client-secret
WIX_REDIRECT_URI=https://your-domain.com/auth/callback
WIX_ENVIRONMENT=development

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/wix_discount_competition
REDIS_URL=redis://localhost:6379

# AI Service API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics and Monitoring
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
SENTRY_DSN=your-sentry-dsn

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Development Settings
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:3000
LOG_LEVEL=debug